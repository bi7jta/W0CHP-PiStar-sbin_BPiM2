		#	cp /var/www/dashboard/patch/tinyfilemanager-config.php /etc/tinyfilemanager-config.php
		#fi

        #FIX p25gateway no data 
        #FIND_STR="\[Network\]"
        #if [ `grep -c "$FIND_STR" /etc/p25gateway ` -ne '0' ];then
