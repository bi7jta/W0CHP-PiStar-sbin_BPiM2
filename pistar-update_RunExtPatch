		#chmod +x /usr/local/sbin/patch-scripts/Patch_Support_HDMI_1080p_FullScrean_RPi4B.sh
		#/usr/local/sbin/patch-scripts/Patch_Support_HDMI_1080p_FullScrean_RPi4B.sh

