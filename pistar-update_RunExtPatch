if [ "$(id -u)" != "0" ]; then
  echo -e "You need to be root to run this command...\n"
  exit 1
fi

exec 200>/var/lock/pistar-update_RunExtPatch.lock || exit 1
if ! flock -n 200 ; then
  echo -e "Another instance [pistar-update_RunExtPatch.lock] is already running...\n"
  exit 1
fi

